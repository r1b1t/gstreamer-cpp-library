@PACKAGE_INIT@

# Bağımlılıkları bul
include(CMakeFindDependencyMacro)

find_dependency(PkgConfig REQUIRED)

# GStreamer bağımlılıklarını kontrol et
pkg_check_modules(GSTREAMER REQUIRED QUIET gstreamer-1.0)
pkg_check_modules(GSTREAMER_RTSP REQUIRED QUIET gstreamer-rtsp-server-1.0)
pkg_check_modules(POPPLER REQUIRED QUIET poppler-cpp)
pkg_check_modules(GTK3 REQUIRED QUIET gtk+-3.0)

# Targets dosyasını include et
include("${CMAKE_CURRENT_LIST_DIR}/GStreamerCppLibraryTargets.cmake")

# Kullanıcıya bilgi ver
check_required_components(GStreamerCppLibrary)