prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${exec_prefix}/@CMAKE_INSTALL_LIBDIR@
includedir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@

Name: @PROJECT_NAME@
Description: GStreamer C++ Wrapper Library
Version: @PROJECT_VERSION@
Requires: gstreamer-1.0 gstreamer-rtsp-server-1.0 gtk+-3.0 poppler-cpp
Libs: -L${libdir} -lGStreamerCppLibrary
Cflags: -I${includedir}/GStreamerCppLibrary